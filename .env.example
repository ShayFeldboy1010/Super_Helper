# ============================================================
# AI Super Man â€” Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=           # Bot token from @BotFather
TELEGRAM_USER_ID=             # Your Telegram user ID (auth whitelist)
M_WEBHOOK_SECRET=             # Random secret for webhook validation

# --- Supabase (PostgreSQL) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=                 # Supabase anon or service key

# --- LLM Providers ---
GEMINI_API_KEY=               # Google AI Studio API key
GROQ_API_KEY=                 # Groq API key (fallback LLM)

# --- Google OAuth 2.0 ---
GOOGLE_CLIENT_ID=             # Google Cloud OAuth client ID
GOOGLE_CLIENT_SECRET=         # Google Cloud OAuth client secret
GOOGLE_REDIRECT_URI=https://your-app.onrender.com/auth/callback

# --- Security ---
SECRET_KEY=                   # Encryption key for stored Google tokens

# --- Deployment ---
WEBHOOK_URL=https://your-app.onrender.com/webhook
RENDER_URL=https://your-app.onrender.com   # For self-ping keep-alive

# --- Optional: Search ---
BRAVE_SEARCH_API_KEY=         # Brave Search API key (falls back to DuckDuckGo)

# --- Optional: Stock Market ---
STOCK_WATCHLIST=AMZN,PLTR,GOOGL,NVDA,MSFT,META,AAPL
STOCK_INDICES=^GSPC,^IXIC,^TA125.TA
STOCK_ALERT_THRESHOLD=3.0    # % move that triggers an alert

# --- Optional: iGPT Email Intelligence ---
# Connect your email at https://igpt.ai, then add your API key here.
# When set, email queries return semantic answers instead of basic metadata.
IGPT_API_KEY=
IGPT_API_USER=                # Your email address connected to iGPT

# --- Optional: Proactive Alerts ---
ALERT_KEY_CONTACTS=           # Comma-separated emails for urgent email alerts
ALERT_URGENT_KEYWORDS=urgent,asap,emergency,critical,deadline,immediately
